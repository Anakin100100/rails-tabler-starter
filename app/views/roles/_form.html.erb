<div class="card border">
  <div class="row g-0">
    <div class="col-3 d-none d-md-block border-end">
      <div class="card-body">
        <h4 class="subheader">General</h4>
        <div class="list-group list-group-transparent flex-column nav nav-role-settings" id="role-settings-tab" role="tablist" aria-orientation="vertical">
          <button
            class="list-group-item list-group-item-action d-flex align-items-center nav-link active"
            id="role-details-tab" data-bs-toggle="tab" data-bs-target="#role-details" type="button" role="tab" aria-controls="role-details" aria-selected="true"
          >
            Details
            <small class="text-muted ms-auto">3</small>
          </button>
        </div>
      </div>
    </div>
    <div class="col d-flex flex-column">
      <div class="card-body tab-content" id="role-settings-tabContent">
        <div class="tab-pane show active" id="role-details" role="tabpanel" aria-labelledby="role-details-tab" tabindex="0">
          <%= render "details", role: @role %>
        </div>
      </div>
    </div>
  </div>
</div>
