<% content_for :page_pretitle do %>
  Space / roles
<% end %>
<% content_for :page_title do %>
  <%= @space.name %>
<% end %>

<div class="row row-cards">
  <div class="col-12">
    <div class="card">
      <div class="card-header">
        <h3 class="card-title">Roles</h3>
        <div class="card-actions">
          <%= link_to new_space_role_path(@space), class: "btn btn-primary"  do %>
            <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24"
                  stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
              <path stroke="none" d="M0 0h24v24H0z" fill="none" />
              <line x1="12" y1="5" x2="12" y2="19" />
              <line x1="5" y1="12" x2="19" y2="12" />
            </svg>
            New role
          <% end %>
        </div>
      </div>
      <div class="table-responsive">
        <table class="table table-vcenter table-mobile-md card-table">
          <thead>
            <tr>
              <th>Name</th>
              <th>Value</th>
              <th>Type</th>
              <th class="w-1"></th>
            </tr>
          </thead>
          <tbody>
            <% @space_roles.each do |role| %>
              <tr>
                <td class="text-muted" data-label="Name" >
                  <%= role.name %>
                </td>
                <td class="text-muted" data-label="Value" >
                  <%= role.value %>
                </td>
                <td class="text-muted" data-label="Type" >
                  <%= role.type.capitalize %>
                </td>
                <td>
                  <div class="btn-list flex-nowrap">
                    <%=link_to "Edit", edit_space_role_path(@space, role), class: "btn #{"disabled" if role.common?}" %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
