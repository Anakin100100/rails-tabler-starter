<h2 class="mb-4">User role</h2>
<%= form_with(model: @user_role, url: role_space_user_url(@space, @user), method: :post) do |form| %>
  <% if @user_role.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(@user_role.errors.count, "error") %> prohibited this user role from being saved:</h2>
      <ul>
        <% @user_role.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group mb-3 row">
    <%= form.label :role, class: "form-label col-3 col-form-label" %>
    <div class="col">
      <%= form.select :role_id, space_roles.map { |role| [role.name, role.id] }, {}, { class:"form-control", ariaDescribedby:"roleHelp" } %>
    </div>
  </div>
  <div class="form-footer">
    <%= form.submit "Save", class:"btn btn-primary" %>
  </div>
<% end %>
